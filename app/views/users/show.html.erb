<p>
  Name:
  <%= fullname(@user_decorator) %>
</p>

<p>
  Email:
  <%= @user_decorator.define_email %>
</p>

<p>
  Birthday:
  <%= @user_decorator.birthday_format %>
</p>

<p>
  Followers:
  <ul>
    <% @user.followers.each do |follower| %>
      <li><%= link_to fullname(follower), follower %></li>
    <% end %>
  </ul>
</p>

<p>
  Following:
  <ul>
    <% @user.following.each do |followed| %>
      <li><%= link_to fullname(followed), followed %></li>
    <% end %>
  </ul>
</p>

<p>
  Posts
  <dl>
    <% @user.posts.each do |post| %>
      <dt>Description:</dt>
      <dd><%= post.description %></dd>
      <dt>Likes:</dt>
      <dd><%= post.likes.count%></dd>
    <% end %>
  </dl>
</p>
